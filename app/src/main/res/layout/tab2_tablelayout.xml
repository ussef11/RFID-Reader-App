<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab2_inv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_invenmodeset"
            android:layout_width="wrap_content"
            android:background="#ff00ddff"
            android:layout_margin="1dp"
            android:layout_height="wrap_content"
            android:text="@string/Constr_invenmode" />

        <Spinner
            android:id="@+id/spinner_invmode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:background="#ff00ddff"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="@string/tab2_button_start" />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:background="#ff00ddff"
            android:text="@string/tab2_button_stop" />

        <Button
            android:id="@+id/button_readclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ff00ddff"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="@string/tab2_button_readclear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab2_textView_oncecnt" />

        <TextView
            android:id="@+id/textView_readoncecnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" 
            android:textSize="25sp" />/>

        <TextView
            android:id="@+id/textView_antpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab2_textView_tocnt" />

        <TextView
            android:id="@+id/textView_readallcnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
             android:textSize="25sp" />
 />

        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_setst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab2_textView_set_status" />

        <TextView
            android:id="@+id/textView_invstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="......." />

        <TextView
            android:id="@+id/textView_costtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/textView_costaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/textView_cavs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0/s" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

       <ListView
           android:id="@+id/listView_epclist"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:overScrollMode="always"
           android:scrollbars="horizontal|vertical" >

    </ListView>

    </HorizontalScrollView>

</LinearLayout>