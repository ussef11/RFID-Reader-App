<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp" >

        <View
            android:id="@+id/View06"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="#70f3ff" />

        <TextView
            android:id="@+id/TextView_tb4_emdda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab4_emd_TextView_tb4_emdda"
            android:textColor="#ed5736"
            android:textSize="18sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_startadr5" />

        <EditText
            android:id="@+id/editText_emdsadr"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="0" />

        <TextView
            android:id="@+id/textView_tb4_bcnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab4_emd_textView_tb4_bcnt" />

        <EditText
            android:id="@+id/editText_emdcount"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bank" />

        <Spinner
            android:id="@+id/spinner_emdbank"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkBox_emdmatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_acpwd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_antpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_acpwd" />

        <EditText
            android:id="@+id/editText_emdacspwd"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="00000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/radioGroup_emdenable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioemd0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/str_disable" />

            <RadioButton
                android:id="@+id/radioemd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_enable" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_getemd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_paramget" />

        <Button
            android:id="@+id/button_setemd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/str_paramset" />
    </LinearLayout>

</LinearLayout>